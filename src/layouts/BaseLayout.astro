---
/**
 * ================================================================================
 * BASE LAYOUT â€” PILGRIMAGE SITE
 * ================================================================================
 * Root layout for ALL content pages. Provides:
 * - Global styles + Inter font
 * - Header navigation
 * - Footer
 * - OG / Twitter meta
 * - Canonical URL
 * ================================================================================
 */

import '../styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    description: string;
    schema?: Record<string, any>;
    breadcrumbs?: { name: string; url: string }[];
}

const { title, description, schema, breadcrumbs } = Astro.props;
const siteUrl = 'https://diggingscriptures.com';
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;
const ogImage = `${siteUrl}/images/og-default.jpg`;

// Build WebSite schema (global on every page)
const websiteSchema = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Digging Scriptures",
    "url": siteUrl,
    "description": "A cultural, historical, and experiential guide to pilgrimage traditions, sacred places, and faith-based travel."
};

// Build BreadcrumbList schema if breadcrumbs provided
const breadcrumbSchema = breadcrumbs && breadcrumbs.length > 0 ? {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": breadcrumbs.map((crumb, i) => ({
        "@type": "ListItem",
        "position": i + 1,
        "name": crumb.name,
        "item": crumb.url.startsWith('http') ? crumb.url : `${siteUrl}${crumb.url}`
    }))
} : null;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <link rel="canonical" href={canonicalUrl} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />

        <!-- Open Graph -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content={canonicalUrl} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Digging Scriptures" />

        <!-- Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
        {schema && <script type="application/ld+json" set:html={JSON.stringify(schema)} />}
        {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
    </head>
    <body class="antialiased text-text-dark bg-complementary">
        <div class="flex flex-col min-h-screen px-6 sm:px-12">
            <div class="flex flex-col w-full max-w-5xl mx-auto grow">
                <Header />
                {breadcrumbs && breadcrumbs.length > 0 && (
                    <nav aria-label="Breadcrumb" class="text-sm text-text-light py-3">
                        <ol class="flex flex-wrap gap-1 items-center">
                            {breadcrumbs.map((crumb, i) => (
                                <li class="flex items-center gap-1">
                                    {i > 0 && <span aria-hidden="true">/</span>}
                                    {i < breadcrumbs.length - 1 ? (
                                        <a href={crumb.url} class="hover:text-primary transition-colors">{crumb.name}</a>
                                    ) : (
                                        <span class="text-text-muted font-medium" aria-current="page">{crumb.name}</span>
                                    )}
                                </li>
                            ))}
                        </ol>
                    </nav>
                )}
                <main class="grow"><slot /></main>
                <Footer />
            </div>
        </div>
    </body>
</html>
