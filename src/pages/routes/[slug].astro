---
/**
 * ================================================================================
 * ROUTE PAGES ROUTE: /routes/[slug]
 * ================================================================================
 * Renders route collection entries at semantic URLs
 * Example: /routes/camino-de-santiago
 * ================================================================================
 */

import { getCollection } from 'astro:content';
import RouteLayout from '../../layouts/RouteLayout.astro';
import { ROUTE_PRODUCTS } from '../../data/pilgrimage-products';

export async function getStaticPaths() {
    const routes = await getCollection('routes', ({ data }) => !data.draft);
    
    return routes.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const sidebarProducts = ROUTE_PRODUCTS[entry.slug] ?? [];
---

<RouteLayout
    title={entry.data.title}
    description={entry.data.description}
    region={entry.data.region}
    countries={entry.data.countries}
    distanceKm={entry.data.distanceKm}
    typicalDurationDays={entry.data.typicalDurationDays}
    faithTraditions={entry.data.faithTraditions}
    difficulty={entry.data.difficulty}
    hasModernSection={entry.data.hasModernSection}
    sidebarProducts={sidebarProducts}
>
    <Content />
</RouteLayout>
