---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import CdnImage from '../../components/CdnImage.astro';

const articles = await getCollection('context', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Historical Context" 
    description="Background articles providing historical and cultural context for pilgrimage traditions."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Historical Context', url: '/context' }
    ]}
>
    <section class="section">
        <div class="container">
            <h1 class="page-heading">Historical Context</h1>

            {articles.length > 0 ? (
                <div class="grid gap-8 sm:grid-cols-2">
                    {articles.map((article, i) => (
                        <a href={`/context/${article.slug}`} class="card block">
                            {article.data.image && (
                                <div class="overflow-hidden rounded-t-xl">
                                    <CdnImage 
                                        src={article.data.image} 
                                        alt={article.data.imageAlt || `${article.data.title} â€” historical context`}
                                        width={445} height={250}
                                        loading={i < 2 ? 'eager' : 'lazy'}
                                        fetchpriority={i === 0 ? 'high' : undefined}
                                        decoding={i < 2 ? 'sync' : 'async'}
                                        class="w-full aspect-[445/250] object-cover"
                                    />
                                </div>
                            )}
                            <div class="p-4">
                                <div class="card-meta">
                                    <span class="badge">Context</span>
                                </div>
                                <h3 class="mb-2 text-text-dark">{article.data.title}</h3>
                                <p class="text-sm text-text-muted leading-relaxed line-clamp-2">{article.data.description}</p>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <p class="text-center text-text-muted italic">Content coming soon.</p>
            )}
        </div>
    </section>
</BaseLayout>
