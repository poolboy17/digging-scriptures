---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Subscribed — Digging Scriptures";
const description = "Thank you for subscribing to Pilgrimage Insights.";
---

<BaseLayout title={title} description={description}>
    <div class="container section" style="max-width: 45ch; text-align: center;">
        <h1 class="text-2xl font-bold mb-4">You're subscribed</h1>
        <p class="text-text-light mb-6">Thank you for joining Pilgrimage Insights. We'll send you an email when we publish new seasonal guides, sacred site coverage, or practical pilgrimage tips.</p>
        <a href="/" class="text-primary font-medium hover:underline">← Back to Digging Scriptures</a>
    </div>
</BaseLayout>
