---
/**
 * ================================================================================
 * JOURNEYS INDEX: /journeys
 * ================================================================================
 * Lists all hub pages
 * ================================================================================
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const hubs = await getCollection('hubs', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Journeys and Pilgrimages" 
    description="Explore pilgrimage traditions, sacred journeys, and faith-based travel across world cultures."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Journeys', url: '/journeys' }
    ]}
>
    <section class="mb-12">
        <h1 class="mb-4">Journeys</h1>
        <p class="text-lg text-text-muted leading-relaxed">Explore pilgrimage traditions and sacred journeys across world cultures.</p>
    </section>

    {hubs.length > 0 ? (
        <ul class="space-y-4">
            {hubs.map((hub) => (
                <li>
                    <a href={`/journeys/${hub.slug}`} class="text-primary text-lg">{hub.data.title}</a>
                    <p class="text-text-light text-sm mt-1">{hub.data.description}</p>
                </li>
            ))}
        </ul>
    ) : (
        <p class="text-text-light italic">Content coming soon. Check back for pilgrimage journeys across world cultures.</p>
    )}
</BaseLayout>
