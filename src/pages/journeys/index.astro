---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const hubs = await getCollection('hubs', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Journeys and Pilgrimages" 
    description="Explore pilgrimage traditions, sacred journeys, and faith-based travel across world cultures."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Journeys', url: '/journeys' }
    ]}
>
    <section class="section">
        <div class="container">
            <h1 class="page-heading">Journeys</h1>

            {hubs.length > 0 ? (
                <div class="grid gap-8 sm:grid-cols-2">
                    {hubs.map((hub) => (
                        <a href={`/journeys/${hub.slug}`} class="card block">
                            <div class="overflow-hidden rounded-lg">
                                <img 
                                    src={hub.data.image || '/images/posts/pilgrimage-default.svg'} 
                                    alt={hub.data.title}
                                    width="445" height="230"
                                    class="w-full aspect-[445/230] object-cover" loading="lazy" decoding="async"
                                />
                            </div>
                            <div class="pt-4">
                                <span class="badge mb-2">Journey</span>
                                <h3 class="mb-2 text-text-dark">{hub.data.title}</h3>
                                <p class="text-sm text-text-muted leading-relaxed line-clamp-2">{hub.data.description}</p>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <p class="text-center text-text-muted italic">Content coming soon.</p>
            )}
        </div>
    </section>
</BaseLayout>
