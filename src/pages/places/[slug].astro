---
/**
 * ================================================================================
 * PLACE PAGES ROUTE: /places/[slug]
 * ================================================================================
 * Renders place collection entries at semantic URLs
 * Example: /places/santiago-de-compostela
 * ================================================================================
 */

import { getCollection } from 'astro:content';
import PlaceLayout from '../../layouts/PlaceLayout.astro';
import { PLACE_PRODUCTS } from '../../data/pilgrimage-products';

export async function getStaticPaths() {
    const places = await getCollection('places', ({ data }) => !data.draft);
    
    return places.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const sidebarProducts = PLACE_PRODUCTS[entry.slug] ?? [];
---

<PlaceLayout
    title={entry.data.title}
    description={entry.data.description}
    region={entry.data.region}
    country={entry.data.country}
    faithTraditions={entry.data.faithTraditions}
    placeType={entry.data.placeType}
    hasExperienceSection={entry.data.hasExperienceSection}
    sidebarProducts={sidebarProducts}
>
    <Content />
</PlaceLayout>
