---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const stories = await getCollection('stories', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Stories and Traditions" 
    description="Discover the people, traditions, and cultural narratives behind pilgrimage traditions."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Stories', url: '/stories' }
    ]}
>
    <section class="section">
        <div class="container">
            <h1 class="page-heading">Stories & Traditions</h1>

            {stories.length > 0 ? (
                <div class="grid gap-8 sm:grid-cols-2">
                    {stories.map((story) => (
                        <a href={`/stories/${story.slug}`} class="card block">
                            <div class="overflow-hidden rounded-lg">
                                <img 
                                    src={story.data.image || '/images/posts/pilgrimage-default.svg'} 
                                    alt={story.data.title}
                                    width="445" height="230"
                                    class="w-full aspect-[445/230] object-cover"
                                />
                            </div>
                            <div class="pt-4">
                                <div class="card-meta">
                                    <span class="badge">{story.data.storyType.replace('-', ' ')}</span>
                                </div>
                                <h3 class="mb-2 text-text-dark">{story.data.title}</h3>
                                <p class="text-sm text-text-muted leading-relaxed line-clamp-2">{story.data.description}</p>
                            </div>
                        </a>
                    ))}
                </div>
            ) : (
                <p class="text-center text-text-muted italic">Content coming soon.</p>
            )}
        </div>
    </section>
</BaseLayout>
