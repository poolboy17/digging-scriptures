---
/**
 * STORIES INDEX: /stories
 */
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const stories = await getCollection('stories', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Stories and Traditions" 
    description="Discover the people, traditions, and cultural narratives behind pilgrimage traditions."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Stories', url: '/stories' }
    ]}
>
    <section class="py-8 mb-10 border-b border-accent/30">
        <h1 class="mb-4">Stories and Traditions</h1>
        <p class="text-lg text-text-muted leading-relaxed max-w-2xl">Discover the people, traditions, and cultural narratives behind pilgrimage.</p>
    </section>

    {stories.length > 0 ? (
        <div class="grid gap-4 sm:grid-cols-2">
            {stories.map((story) => (
                <a href={`/stories/${story.slug}`}
                   class="group block p-6 rounded-xl bg-surface/60 border border-accent/20 hover:border-primary/40 hover:shadow-md transition-all duration-300 no-underline">
                    <span class="inline-block text-xs text-accent font-medium uppercase tracking-wider mb-2">
                        {story.data.storyType.replace('-', ' ')}
                    </span>
                    <h3 class="text-lg font-semibold text-text-dark group-hover:text-primary transition-colors mb-2">
                        {story.data.title}
                    </h3>
                    <p class="text-sm text-text-muted leading-relaxed">{story.data.description}</p>
                </a>
            ))}
        </div>
    ) : (
        <div class="p-8 rounded-xl bg-surface/40 border border-accent/20 text-center">
            <p class="text-text-muted italic">Content coming soon. Check back for stories and traditions from pilgrimage cultures.</p>
        </div>
    )}
</BaseLayout>
