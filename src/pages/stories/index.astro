---
/**
 * ================================================================================
 * STORIES INDEX: /stories
 * ================================================================================
 * Lists all story pages
 * ================================================================================
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const stories = await getCollection('stories', ({ data }) => !data.draft);
---

<BaseLayout 
    title="Stories and Traditions" 
    description="Discover the people, traditions, and cultural narratives behind pilgrimage traditions."
    breadcrumbs={[
        { name: 'Home', url: '/' },
        { name: 'Stories', url: '/stories' }
    ]}
>
    <section class="mb-12">
        <h1 class="mb-4">Stories and Traditions</h1>
        <p class="text-lg text-gray-300 leading-relaxed">Discover the people, traditions, and cultural narratives behind pilgrimage.</p>
    </section>

    {stories.length > 0 ? (
        <ul class="space-y-4">
            {stories.map((story) => (
                <li>
                    <a href={`/stories/${story.slug}`} class="text-primary text-lg">{story.data.title}</a>
                    <p class="text-gray-400 text-sm mt-1">{story.data.storyType.replace('-', ' ')}</p>
                    <p class="text-gray-300 text-sm">{story.data.description}</p>
                </li>
            ))}
        </ul>
    ) : (
        <p class="text-gray-400 italic">Content coming soon. Check back for stories and traditions from pilgrimage cultures.</p>
    )}
</BaseLayout>
