---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "Terms of Use — Digging Scriptures";
const description = "Terms and conditions governing the use of the Digging Scriptures website.";
const breadcrumbs = [
    { name: "Home", url: "/" },
    { name: "Terms of Use", url: "/terms" },
];
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
    <div class="container section">
        <article class="content" style="max-width: 65ch;">
