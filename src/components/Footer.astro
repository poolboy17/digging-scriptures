---
/**
 * Site-wide footer for Digging Scriptures.
 */
const year = new Date().getFullYear();
---

<footer class="pt-12 pb-8 sm:pt-16 sm:pb-12 border-t border-border mt-16">
    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6 text-sm text-text-light">
        <div>
            <p class="font-semibold text-text-dark mb-1">Digging Scriptures</p>
            <p>&copy; {year}. Scholarly pilgrimage research.</p>
        </div>
        <nav class="flex flex-wrap gap-x-5 gap-y-2">
            <a href="/journeys" class="hover:text-primary transition-colors no-underline">Journeys</a>
            <a href="/places" class="hover:text-primary transition-colors no-underline">Places</a>
            <a href="/routes" class="hover:text-primary transition-colors no-underline">Routes</a>
            <a href="/stories" class="hover:text-primary transition-colors no-underline">Stories</a>
            <a href="/context" class="hover:text-primary transition-colors no-underline">Context</a>
        </nav>
    </div>
    <div class="flex flex-wrap gap-x-5 gap-y-2 mt-6 text-xs text-text-light">
        <a href="/privacy" class="hover:text-primary transition-colors no-underline">Privacy Policy</a>
        <a href="/terms" class="hover:text-primary transition-colors no-underline">Terms of Use</a>
        <a href="/affiliate-disclaimer" class="hover:text-primary transition-colors no-underline">Affiliate Disclaimer</a>
    </div>
</footer>
