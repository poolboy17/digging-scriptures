---
/**
 * Site-wide header navigation for Digging Scriptures.
 * Links map to the content collections defined in config.ts.
 */

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Journeys', href: '/journeys' },
    { linkText: 'Places', href: '/places' },
    { linkText: 'Routes', href: '/routes' },
    { linkText: 'Stories', href: '/stories' },
];

const currentPath = Astro.url.pathname;
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-12 sm:pt-10 sm:pb-16">
    <a href="/" class="text-xl font-bold text-text-dark no-underline hover:opacity-90 transition-opacity">
        Digging Scriptures
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-1 gap-y-1 ml-auto">
                {navItems.map((item) => (
                    <li>
                        <a 
                            href={item.href} 
                            class:list={[
                                "inline-block px-3 py-1.5 rounded-md text-sm font-medium transition-colors no-underline",
                                currentPath === item.href || currentPath.startsWith(item.href + '/')
                                    ? "bg-primary/10 text-primary font-semibold"
                                    : "text-text-muted hover:text-primary hover:bg-primary/5"
                            ]}
                        >
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
