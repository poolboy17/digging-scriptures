---
/**
 * ================================================================================
 * SHARED SIBLING NAVIGATION â€” used by both HubLayout and CityLayout
 * ================================================================================
 * Renders the "Also explore" / "Explore other..." grid of sibling items.
 * Works for both tradition hubs and city hubs.
 * ================================================================================
 */

interface SiblingItem {
    slug: string;
    title: string;
    description: string;
}

interface Props {
    label: string;
    basePath: string;
    items: SiblingItem[];
}

const { label, basePath, items } = Astro.props;
---

{items.length > 0 && (
    <section class="sibling-section">
        <div class="container">
            <p class="sibling-label">{label}</p>
            <div class="sibling-grid">
                {items.map((item) => (
                    <a href={`${basePath}/${item.slug}`} class="sibling-card">
                        <h3 class="sibling-title">{item.title}</h3>
                        <p class="sibling-desc">{item.description}</p>
                        <span class="sibling-arrow">&rarr;</span>
                    </a>
                ))}
            </div>
        </div>
    </section>
)}

<style>
    .sibling-section {
        background: #f5f5f4;
        padding: 2.5rem 0;
        margin-top: 2rem;
    }
    .sibling-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #78716c;
        margin: 0 0 1rem;
    }
    .sibling-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
    }
    .sibling-card {
        display: flex;
        flex-direction: column;
        padding: 1.25rem;
        border-radius: 0.75rem;
        border: 1px solid #e7e5e4;
        background: #fff;
        text-decoration: none;
        transition: border-color 0.2s, box-shadow 0.2s, transform 0.2s;
    }
    .sibling-card:hover {
        border-color: #6D28D9;
        box-shadow: 0 4px 14px rgba(109,40,217,0.1);
        transform: translateY(-2px);
    }
    .sibling-title {
        font-family: 'Playfair Display Variable', serif;
        font-size: 1.05rem;
        color: #1c1917;
        margin: 0 0 0.35rem;
    }
    .sibling-desc {
        font-size: 0.85rem;
        color: #78716c;
        line-height: 1.4;
        flex: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .sibling-arrow {
        color: #6D28D9;
        font-weight: 600;
        margin-top: 0.5rem;
    }
</style>
